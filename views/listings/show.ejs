
 <% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-2">
    <div class="col-8 offset-3">
    <h3>Listing Details</h3>
    </div>
    <br><br><br>
 
    <div class="card col-6 offset-2 show-card listing-card" style="border-radius:1rem !important">
        <img src="<%=listing.image.url%>" class="card-img-top show-img" alt="listing_image" style="height:20rem;border-radius:1rem !important">
  <div class="card-body">
    <p class="card-text">Owned by:
      <i><%=listing.owner.username%></i>
      </p>
     <p> <b><%=listing.title%></b></p>
      <p><%=listing.description %></p>
     <p> &#8377;<%=listing.price.toLocaleString("en-IN")%></p>
     <p><%=listing.location %></p>
     <p><%=listing.country %></p>
    
  </div>
    </div>
    <br>
    <% if(currUser && currUser._id.equals(listing.owner._id)){%>

    <div class="btns">
    <a href="/listings/<%=listing._id %>/edit" class="btn add-btn edit-btn  offset-3">Edit</a>

        <form method="POST" action="/listings/<%=listing._id %>?_method=DELETE">
    <button class="btn btn-dark add-btn offset-5 ">Delete</button>
    </form>
  </div>
    <%}%>
 
<hr>
  <div class="col-8 offset-3 mt-3 mb-3">

    <% if(currUser){%>
    <h4>Leave the Review</h4>
    <form action="/listings/<%=listing._id%>/reviews" method="POST" novalidate class="needs-validation">
      <legend>rating</legend>
<fieldset class="starability-slot">
  <!-- <legend>rating:</legend> -->
  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
  <input type="radio" id="first-rate1" name="review[rating]" value="1" /> 
  <label for="first-rate1" title="Terrible">1 star</label>
  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>
  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
  <label for="first-rate3" title="Average">3 stars</label>
  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>
  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>
</fieldset>

      <div class="col-5 offset-2 mt-3">
        <label for="comment" class="form-label">Comments</label> 
        <textarea name="review[comment]" id="comment" cols="30" rows="6" class="form-control" required></textarea>
        <div class="invalid-feedback">please submit some comments for review</div>
      </div>
      <button class="btn btn-dark offset-1 mt-2">Submit</button>
    </form>
    <%}%>
    <hr>
   <% if(listing.reviews.length>0){%>
  
     <div class="row">
     <h4><b>All Reviews</b></h4>
    <% for( review of listing.reviews){%>
        <div class="card col-5 mb-3 ms-3">
          <div class="card-body">
            <h6 class="card-title"><%=review.author.username%></h6>
             <p class="starability-result card-text" data-rating="<%=review.rating%>"></p>
      <p class="card-text"><%=review.comment%></p>
       <% if(currUser && review.author && review.author._id.equals(currUser._id)){ %>
         <form  class="mb-3" method="POST" action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE">
          <button class="btn btn-sm btn-dark">Delete</button>
        </form>
          <% } %>
        </div>
       </div> 
     <%}%>
     </div>
      <%}%>
  </div>
    </div>
</body>